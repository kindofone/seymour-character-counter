{
  "name": "Seymour: Character Counter",
  "version": "1.0.1",
  "manifest_version": 2,
  "description": "A character counter that appears while you type in input fields and text areas. It helps you write more consicely on the web.",
  "homepage_url": "http://seymour.cc",
  "icons": {
    "12": "icons/icon12.png",
    "16": "icons/icon16.png",
    "19": "icons/icon19.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": ["src/bg/background.js"],
    "persistent": true
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "options_page": "src/options_custom/index.html",
  "web_accessible_resources": ["icons/icon12.png"],
  "page_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Seymour: Character Counter",
    "default_popup": "src/page_action/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "all_frames": true,
      "css": [
        "src/inject/inject.css"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ]
}